# Database
DATABASE_URL="postgresql://username:password@localhost:5432/attireburg_db"

# NextAuth (if using)
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# JWT Secret
JWT_SECRET="your-jwt-secret-here"

# Environment
NODE_ENV="development"

# Base URL for redirects
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# PayPal Configuration
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_ENVIRONMENT="sandbox"

# Google Pay Configuration
GOOGLE_PAY_ENVIRONMENT="TEST"
GOOGLE_PAY_MERCHANT_ID="your-google-pay-merchant-id"
GOOGLE_PAY_MERCHANT_NAME="Attireburg"

# Email Configuration
EMAIL_PROVIDER="smtp"
EMAIL_API_KEY="your-email-api-key"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-email-password"
FROM_EMAIL="noreply@attireburg.com"
FROM_NAME="Attireburg"

# Feature Flags
ENABLE_BACKORDERS="true"
ENABLE_WAITLIST="true"
ENABLE_VARIANTS="true"
ENABLE_ANALYTICS="false"

# Optional: External Services
# CLOUDINARY_URL="cloudinary://api_key:api_secret@cloud_name"
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_PUBLISHABLE_KEY="pk_test_..."